{
  "name": "node-clean-architecture-api",
  "version": "1.0.0",
  "private": true,
  "license": "MIT",
  "description": "A clean and scalable Node.js API template based on Clean Architecture and SOLID principles.",
  "author": "Gustavo Silveira",
  "scripts": {
    "dev:api": "tsx watch --env-file=.env src/app.module.ts",
    "dev:worker": "tsx watch --env-file=.env src/infra/queue/queue.bootstrap.ts",
    "prod:api": "node dist/app.module.js",
    "prod:worker": "node dist/infra/queue/q.module.js",
    "build": "tsc && node dist/app.module.js",
    "lint": "eslint src --ext .ts",
    "test": "jest --config src/infra/testing/jest.config.ts",
    "test:watch": "jest --watch --config src/infra/testing/jest.config.ts",
    "test:cov": "jest --coverage --config src/infra/testing/jest.config.ts",
    "test:e2e": "jest --config src/infra/testing/jest.e2e.config.ts",
    "pre-commit-check": "npm run lint && npm run test",
    "postinstall": "husky install"
  },
  "dependencies": {
    "@prisma/client": "^6.5.0",
    "bullmq": "^5.54.2",
    "dotenv": "^16.5.0",
    "express": "^5.1.0",
    "ioredis": "^5.6.1",
    "zod": "^3.24.2"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.8.0",
    "@commitlint/config-conventional": "^19.8.0",
    "@commitlint/types": "^19.8.0",
    "@eslint/js": "^9.24.0",
    "@tsconfig/node23": "^23.0.1",
    "@types/express": "^5.0.1",
    "@types/jest": "^29.5.14",
    "@types/node": "^22.14.0",
    "@types/supertest": "^6.0.3",
    "eslint": "^9.23.0",
    "eslint-config-prettier": "^10.1.1",
    "eslint-plugin-jest": "^28.11.0",
    "eslint-plugin-prettier": "^5.2.6",
    "globals": "^16.0.0",
    "husky": "^9.1.7",
    "jest": "^29.7.0",
    "prettier": "^3.5.3",
    "supertest": "^7.1.1",
    "ts-jest": "^29.3.1",
    "tsx": "^4.19.3",
    "typescript": "^5.8.2",
    "typescript-eslint": "^8.29.0"
  }
}
